{
  "layer": "top",
  "position": "top",
  "height": 12,
  "spacing": 0,
  "modules-left": [
    "niri/workspaces",
    "tray",
    "network",
    "custom/updates",
    "mpris",
    "privacy"
  ],
  "modules-center": ["niri/window"],
  "modules-right": [
    "battery",
    "power-profiles-daemon",
    "memory",
    "cpu",
    "temperature",
    "custom/nvidia",
    "bluetooth",
    "pulseaudio",
    "backlight",
    "clock",
  ],
  "niri/workspaces": {
    "disable-scroll": false,
    // "all-outputs": true,
    "format": "{icon}",
    "on-click": "activate",
    },
    "format-icons": {
      "3": "3",
      "2": "2",
      "1": "1",     
      "4": "4",
      "5": "5",
      "6": "6",
      "7": "7",
      "8": "8",
      "9": "9",      
      "default": "Óûï"
    },
  "niri/window": {
    "icon": true,
    "max-length": 50
  },
  "systemd-failed-units": {
	"hide-on-ok": false, // Do not hide if there is zero failed units.
	"format": "‚úó {nr_failed}",
	"format-ok": "‚úì",
	"system": true, // Monitor failed systemwide units.
	"user": false // Ignore failed user units.
  },
  "power-profiles-daemon": {
  "format": "{profile}",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true, 
  },
  
  "network": {
    //"format-wifi": "<span color='#00FFFF'>Û∞§® </span>{essid}",
    "format-wifi": "<span color='#00FFFF'>Û∞§® </span>{signalStrength}%<span color='#FF1493'>Û∞Öß </span>{bandwidthUpBytes}<span color='#00BFFF'>Û∞Ö¢ </span>{bandwidthDownBytes}",
    "format-ethernet": "<span color='#7FFF00'>ÔÄí </span>Wired ",
    "tooltip-format": "{ipaddr} : {frequency}GHz {signalStrength}% ",
    "format-linked": "<span color='#FFA500'>Û±òñ </span>{ifname} (No IP) ",
    "format-disconnected": "<span color='#FF4040'>ÔÅ± </span>",
    "interval": 3
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span color='#28CD41'>{icon}</span>{capacity}%",
    "format-charging": "Û±êã{capacity}%",
	  "interval": 1,
    "format-icons": ["Û∞Çé", "Û∞Åº", "Û∞Åø", "Û∞ÇÅ", "Û∞Åπ"],
    "tooltip": true
  },
  
  "pulseaudio": {
    "format": "<span color='#00FF7F'>{icon}</span>{volume}",
    "format-muted": "<span color='#FF4040'>Û∞ñÅ </span>0",
    "format-icons": {
      "headphone": "<span color='#BF00FF'>ÔÄ• </span>",
      "hands-free": "<span color='#BF00FF'>ÔÄ• </span>",
      "headset": "<span color='#BF00FF'>ÔÄ• </span>",
      "phone": "<span color='#00FFFF'>ÔÇï </span>",
      "portable": "<span color='#00FFFF'>ÔÇï </span>",
      "car": "<span color='#FFA500'>ÔÜπ </span>",
      "default": [
        "<span color='#808080'>ÔÄ¶ </span>",
        "<span color='#FFFF66'>ÔÄß </span>",
        "<span color='#00FF7F'>ÔÄ® </span>"
      ]
    },
    "on-click-right": "pavucontrol -t 3",
    "on-click": "pactl -- set-sink-mute 0 toggle",
    "tooltip": true,
